{
  "manifest_version": 3,
  "name": "Casspr - AI Social Engagement",
  "version": "1.1.0",
  "description": "Making social media and marketing effortless and affordable for every startup.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://www.linkedin.com/feed/*"
      ],
      "js": ["lib/storage.js", "content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage", "activeTab", "sidePanel"],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://www.linkedin.com/*",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://api.groq.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "web_accessible_resources": [{
    "resources": ["icons/*.png"],
    "matches": ["https://twitter.com/*", "https://x.com/*", "https://www.linkedin.com/*"]
  }],
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  }
}
